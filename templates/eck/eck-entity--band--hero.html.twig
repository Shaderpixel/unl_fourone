<div class="wdn-band wdn-hero"{{ attributes }}>
  <div class="wdn-hero-text-container">
    <div class="wdn-hero-text">
      <h2 class="wdn-hero-heading"><span class="wdn-hero-initial-line">{{ entity.field_hero_initial_line }}</span> <span class="wdn-hero-impact-line">{{ entity.field_hero_impact_line }}</span></h2>
      {{ entity.field_hero_link }}
    </div>
  </div>
  {% if entity.field_hero_video.value %}
  <div class="wdn-hero-video">
    <video autoplay="" loop="" poster="samplecontent/2015-first-fb-game-wooooo.jpg">
      <source src="{{ entity.field_hero_video }}">
    </video>
  </div>
  {% endif %}
  <div class="wdn-hero-picture">
    {{ entity.field_hero_picture }}
  </div>
</div>
