{% extends "paragraph.html.twig" %}

{% block content %}
<div {{ attributes.addClass('wdn-band wdn-hero').addClass(classes) }}>
  <div class="wdn-hero-text-container">
    <div class="wdn-hero-text">
      <h2 class="wdn-hero-heading"><span class="wdn-hero-initial-line">{{ content.field_hero_initial_line }}</span> <span class="wdn-hero-impact-line">{{ content.field_hero_impact_line }}</span></h2>
      {{ content.field_hero_link }}
    </div>
  </div>
  {% if content.field_hero_video.value %}
  <div class="wdn-hero-video">
    <video autoplay="" loop="" poster="samplecontent/2015-first-fb-game-wooooo.jpg">
      <source src="{{ content.field_hero_video }}">
    </video>
  </div>
  {% endif %}
  <div class="wdn-hero-picture">
    {{ content.field_hero_picture }}
  </div>
</div>
{% endblock %}
